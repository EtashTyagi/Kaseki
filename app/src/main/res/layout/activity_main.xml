<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#000000">
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/search_screen"
             android:id="@+id/mainDisplayInclude"/>
    <include android:layout_width="0dp" android:layout_height="wrap_content"
             layout="@layout/secondary_song_display" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/bottomBarInclude"
             android:layout_marginBottom="4dp" app:layout_constraintHorizontal_bias="0.0"
             android:id="@+id/secondarySongDisplayInclude"/>
    <include android:layout_width="0dp" android:layout_height="wrap_content" layout="@layout/bottom_bar"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/bottomBarInclude"/>
</androidx.constraintlayout.widget.ConstraintLayout>