<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" android:background="@null"
                                   app:cardBackgroundColor="@null">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/black">
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:id="@+id/playlistNameButton" android:layout_weight="1"
                android:gravity="center_vertical" android:backgroundTint="@color/secondary_black"
                android:textSize="24sp" android:fontFamily="sans-serif" app:iconPadding="0dp"
                android:layout_margin="0dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>